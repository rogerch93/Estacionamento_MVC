@{
    ViewData ["Title"] = "Estadia";
}

@model EstacionamentoDotnet6.Models.Estadia

<h1 class="text-withe">Tempo do Veiculo no Estacionamento</h1>

<h4 class="text-black">Estadia</h4>
<hr />
 <div class="row">
     <div class="col-md-3">
         <form action="Estadia">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="from-group">
                    <label asp-for="NumVaga" class="control-label">Numero da Vaga</label>
                    <input asp-for="NumVaga" class="form-control">
             </div>
             <div class="form-group">
                    <label asp-for="HoraEntrada" class="control-label">Hora de Entrada</label>
                    <input asp-for="HoraEntrada" class="form-control">
             </div>
                <div class="form-group">
                    <label asp-for="HoraSaida" class="control-label">Hora de Saida</label>
                    <input asp-for="HoraSaida" class="form-control">
                </div>

                <div class="form-group">
                    <input id="Cad" type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
         </form>

         <div>
             <a class="btn btn-outline-primary" asp-action="#">Voltar</a>
         </div>
     </div>
 </div>