@model EstacionamentoDotnet6.Models.Pessoa

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-white">Editar</h1>

<h4 class="text-white">Carro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" id="Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control"  />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
              
            <div class="form-group">
                <input id="Salvar" type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Voltar a lista</a>
</div>