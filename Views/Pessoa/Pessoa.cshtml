@{
    ViewData ["Title"] = "Pessoa";
}

@model EstacionamentoDotnet6.Models.Pessoa

<h1 class="text-withe">Cadastro de Clientes</h1>

<h4 class="text-black">Clientes</h4>
<hr />
 <div class="row">
     <div class="col-md-3">
         <form action="Pessoa">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="from-group">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control">
             </div>
             <div class="from-group">
                    <label asp-for="CPF" class="control-label">CPF</label>
                    <input asp-for="CPF" class="form-control">
             </div>            

                <div class="form-group">
                    <input id="Cad" type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
         </form>

         <div>
             <a class="btn btn-outline-primary" asp-action="#">Voltar</a>
         </div>
     </div>
 </div>